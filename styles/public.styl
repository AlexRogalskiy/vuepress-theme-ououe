:root
  --accentColor: $accentColor
  --titleColor: $titleColor
  --textColor: $textColor
  --borderColor: $borderColor
  --bgColor: $bgColor
  --codeBgColor: $codeBgColor
  --arrowBgColor: $arrowBgColor
  --shadowColor: $shadowColor
  --maskColor: $maskColor
  --whiteColor: $whiteColor
  --blackColor: $blackColor
  --transColor: $transColor
  @media (prefers-color-scheme: dark)
    --accentColor: $accentDarkColor
    --titleColor: $titleDarkColor
    --textColor: $textDarkColor
    --borderColor: $borderDarkColor
    --bgColor: $bgDarkColor
    --codeBgColor: $codeBgDarkColor
    --arrowBgColor: $arrowBgDarkColor
    --shadowColor: $shadowDarkColor
    --maskColor: $maskDarkColor
    --whiteColor: $whiteDarkColor
    --blackColor: $blackDarkColor

html
  font-size 16px

body,
input,
textarea,
button,
select 
  font-family -apple-system,BlinkMacSystemFont,Microsoft YaHei,Segoe UI,Roboto,Source Han Sans SC,Oxygen,Ubuntu,Cantarell,Fira Sans,Droid Sans,Helvetica Neu,PingFang SC,sans-serif

.pointer 
  cursor pointer
  user-select none

.inblock 
  display inline-block
  vertical-align top

.img 
  width 100%
  height 100%

.main
  margin 0 auto
  width 100%
  max-width $mainWidth
  @media (max-width $phoneWidth)
    padding: 0 .5rem
    width auto

#app
  background var(--bgColor)
  transition all .5s ease-in-out

.search-box input
  border 1px solid var(--borderColor)
  background-color var(--bgColor)
  transition all .5s ease-in-out

@media (max-width $phoneWidth)
  .search-box
    margin-right 0
    input
      left 0 !important
      &:focus
        background-color $whiteColor !important

.global-ui
  .go-to-top
    z-index 100