html
  font-size 16px

body,
input,
textarea,
button,
select 
  font-family -apple-system,BlinkMacSystemFont,Microsoft YaHei,Segoe UI,Roboto,Source Han Sans SC,Oxygen,Ubuntu,Cantarell,Fira Sans,Droid Sans,Helvetica Neu,PingFang SC,sans-serif

.pointer 
  cursor pointer
  user-select none

.inblock 
  display inline-block
  vertical-align top

.img 
  width 100%
  height 100%

.main
  margin 0 auto
  width 100%
  max-width $mainWidth
@media (max-width $phoneWidth)
  .main
    padding: 0 .5rem
    width auto

#app
  background $bgColor

@media (max-width $phoneWidth)
  .search-box
    margin-right 0
    input
      left 0 !important
      background-color $transColor !important
      &:focus
        background-color $whiteColor !important

.global-ui
  .go-to-top
    z-index 100